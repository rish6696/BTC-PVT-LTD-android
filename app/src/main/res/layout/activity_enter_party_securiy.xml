<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EnterPartySecuriy">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PARTY SECURITY"
                android:textSize="15pt"
                android:textColor="@android:color/black"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Truck No:"
                    android:textColor="@android:color/black"
                    android:textSize="10pt"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Truck No"
                    android:textSize="10pt"
                    android:textColor="@android:color/black"
                    android:id="@+id/truck"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LR No:"
                    android:textColor="@android:color/black"
                    android:textSize="10pt"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="LR No"
                    android:textSize="10pt"
                    android:textColor="@android:color/black"
                    android:id="@+id/lrno"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WEIGHT:"
                    android:textColor="@android:color/black"
                    android:textSize="10pt"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ton"
                    android:inputType="numberDecimal"
                    android:textSize="10pt"
                    android:layout_weight="2"
                    android:id="@+id/weighttn"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="kg"
                    android:inputType="numberDecimal"
                    android:textSize="10pt"
                    android:layout_weight="2"
                    android:id="@+id/weightkg"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SECURITY:"
                    android:textColor="@android:color/black"
                    android:textSize="10pt"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="SECURITY"
                    android:textSize="10pt"
                    android:inputType="number"
                    android:textColor="@android:color/black"
                    android:id="@+id/security"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TDS:"
                    android:textColor="@android:color/black"
                    android:textSize="10pt"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter TDS"
                    android:textSize="10pt"
                    android:inputType="number"
                    android:textColor="@android:color/black"
                    android:id="@+id/tds"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recieving Charge:"
                    android:textColor="@android:color/black"
                    android:textSize="10pt"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="recieving charge"
                    android:textSize="10pt"
                    android:inputType="number"
                    android:textColor="@android:color/black"
                    android:id="@+id/recievingcharge"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SHORTAGE CHARGE:"
                    android:textColor="@android:color/black"
                    android:textSize="10pt"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter shortage charge:"
                    android:textSize="10pt"
                    android:inputType="number"
                    android:textColor="@android:color/black"
                    android:id="@+id/materialshortage"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frate Charge:"
                    android:textColor="@android:color/black"
                    android:textSize="10pt"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter frate charge:"
                    android:textSize="10pt"
                    android:inputType="number"
                    android:textColor="@android:color/black"
                    android:id="@+id/materialfortage"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight Diff:"
                    android:textColor="@android:color/black"
                    android:textSize="10pt"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10pt"
                    android:inputType="number"
                    android:textColor="@android:color/black"
                    android:id="@+id/weightdiff"/>

            </LinearLayout>



            <Button
                android:layout_width="match_parent"
                android:layout_height="250px"
                android:text="Calculate"
                android:layout_gravity="center"
                android:onClick="CalB"
                android:id="@+id/calculate"/>










            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To PAY="
                android:textSize="10pt"
                android:id="@+id/topay"
                android:textColor="@android:color/black"/>



            <Button
                android:layout_width="match_parent"
                android:layout_height="250px"
                android:text="Submit"
                android:layout_gravity="center"
                android:onClick="submitT"
                android:id="@+id/submit"/>



        </LinearLayout>


    </ScrollView>

</android.support.v7.widget.LinearLayoutCompat>